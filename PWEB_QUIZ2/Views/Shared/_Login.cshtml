@model PWEB_QUIZ2.Models.MemberShip

@{
    Layout = null;
}

@using(Html.BeginForm("Login", "Account",new { id = "LoginForm", ReturnUrl = Request.QueryString["ReturnUrl"] }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @tabindex = "2", @placeholder = "Enter Username", @autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @tabindex = "3", @placeholder = "Enter Password", @autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button class="btn btn-success" tabindex="3" type="submit">Login</button>
        <label style="color:white;">
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>
}